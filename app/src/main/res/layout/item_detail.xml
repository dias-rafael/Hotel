<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

        <TextView
                android:text="@string/price_room_adulto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvValorQuartoAdulto" android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/price_font_size"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvQuartoAdulto" android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"/>
        <TextView
                android:text="@string/title_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvListaTipo"
                android:textColor="@color/colorLightPrimary"
                android:textSize="@dimen/subtitle_font_size"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp" android:textStyle="bold"/>
        <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:id="@+id/view" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:background="@color/colorSecondaryText"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvValorQuartoCrianca"/>
        <TextView
                android:text="@string/title_room_adulto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvQuartoAdulto" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:textStyle="bold"
                android:textSize="@dimen/subtitle_font_size" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvListaTipo" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
                android:textColor="@color/colorTextIcons"/>
        <TextView
                android:text="@string/title_room_crianca"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvQuartoCrianca" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvValorQuartoAdulto" android:layout_marginTop="16dp"
                android:textStyle="bold" android:textSize="@dimen/subtitle_font_size" android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
                android:textColor="@color/colorTextIcons"/>
        <TextView
                android:text="@string/price_room_crianca"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvValorQuartoCrianca" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp" app:layout_constraintTop_toBottomOf="@+id/tvQuartoCrianca"
                android:textSize="@dimen/price_font_size" android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
    </android.support.constraint.ConstraintLayout>
</layout>