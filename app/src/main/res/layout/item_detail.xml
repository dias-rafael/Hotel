<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="viewModel"
                type="br.com.rafaeldias.hotel.ui.hotel.HotelDetailViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

        <TextView
                android:text="@string/price_room"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvListaValor" android:textStyle="bold"
                app:mutableText="@{viewModel.getHotelDetailPrecoQuarto()}"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/price_font_size"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvListaTipo" android:layout_marginTop="8dp"/>
        <TextView
                android:text="@string/title_tipo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvListaTipo"
                app:mutableText="@{viewModel.getHotelDetailCategoriaQuarto()}"
                android:textColor="@color/colorLightPrimary"
                android:textSize="@dimen/type_font_size"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"/>
        <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:id="@+id/view" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:background="@color/colorSecondaryText"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvListaValor"/>
    </android.support.constraint.ConstraintLayout>
</layout>